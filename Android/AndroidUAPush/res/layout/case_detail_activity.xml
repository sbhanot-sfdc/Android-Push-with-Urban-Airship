<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout
	    android:orientation="vertical" 
	    android:scrollbars="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/basebackground"
	    android:id="@+id/ll_vd">
	    <LinearLayout
	    	android:orientation="vertical"
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:layout_weight="1"
	    	android:background="@color/LightGrey"
	    	android:padding="5dip"
	    	android:layout_margin="5dip">
	        <LinearLayout
			   	android:orientation="vertical"
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:layout_margin="10dip"
		    	android:background="@drawable/rounded_borders">
    	<!--        	android:background="@color/LightGrey" 
	        	android:orientation="vertical" 
	        	android:layout_height="wrap_content" 
	        	android:layout_width="fill_parent"> -->
	            	<LinearLayout 
	            		android:layout_marginBottom="3dip" 
	            		android:background="@color/LightGrey" 
	            		android:layout_marginTop="3dip" 
	            		android:orientation="horizontal" 
	            		android:layout_height="wrap_content" 
	            		android:layout_width="fill_parent">
	                	<TextView 
	                		android:text="Case Details" 
	                		android:layout_height="wrap_content" 
	                		android:textColor="@color/White" 
	                		android:layout_width="wrap_content"/>
	                	<ImageView 
	                		android:src="@drawable/accountinfoicon" 
	                		android:layout_marginRight="10dip" 
	                		android:layout_marginLeft="10dip" 
	                		android:layout_height="wrap_content" 
	                		android:layout_width="wrap_content"/>
	                	<View
	                		android:layout_marginTop="7dip" 
	                		android:background="@color/Blue" 
	                		android:layout_height="2dip" 
	                		android:layout_width="fill_parent"/>
	            	</LinearLayout>
	            	<TableLayout 
	            		android:stretchColumns="1" 
	            		android:layout_height="wrap_content" 
	            		android:layout_width="fill_parent">
	                	<TableRow 
	                		android:layout_width="wrap_content" 
	                		android:layout_height="wrap_content">
	                    	<TextView 
	                    		android:textSize="10dip" 
	                    		android:text="Case Number:" 
	                    		android:layout_height="wrap_content" 
	                    		android:textColor="@color/White" 
	                    		android:layout_width="wrap_content" 
	                    		android:textStyle="bold"/>
	                    	<TextView
	                    		android:layout_marginLeft="10dip" 
	                    		android:id="@+id/caseNumber" 
	                    		android:layout_height="wrap_content" 
	                    		android:textColor="@color/White" 
	                    		android:layout_width="wrap_content"/>
	                	</TableRow>
	                	<TableRow 
	                		android:layout_width="wrap_content" 
	                		android:layout_height="wrap_content">
	                    	<TextView 
	                    		android:textSize="10dip" 
	                    		android:text="Account Name:" 
	                    		android:layout_height="wrap_content" 
	                    		android:textColor="@color/White" 
	                    		android:layout_width="wrap_content" 
	                    		android:textStyle="bold"/>
	                    	<TextView
	                    		android:layout_marginLeft="10dip" 
	                    		android:id="@+id/acctName" 
	                    		android:layout_height="wrap_content" 
	                    		android:textColor="@color/White" 
	                    		android:layout_width="wrap_content"/>
	                	</TableRow>
		                <TableRow 
		                	android:id="@+id/tableRow9" 
		                	android:layout_width="wrap_content" 
		                	android:layout_height="wrap_content">
		                    <TextView 
		                    	android:textSize="10dip" 
		                    	android:text="Status:" 
		                    	android:layout_height="wrap_content" 
		                    	android:textColor="@color/White" 
		                    	android:layout_width="wrap_content" 
		                    	android:textStyle="bold"/>
		                    <TextView
		                    	android:layout_marginLeft="10dip" 
		                    	android:id="@+id/caseStatus" 
		                    	android:layout_height="wrap_content" 
		                    	android:textColor="@color/White" 
		                    	android:layout_width="wrap_content"/>
		                </TableRow>
		                <TableRow
		                	android:id="@+id/tableRow10" 
		                	android:layout_width="wrap_content" 
		                	android:layout_height="wrap_content">
		                    <TextView 
		                    	android:textSize="10dip" 
		                    	android:text="Description:" 
		                    	android:layout_height="wrap_content" 
		                    	android:textColor="@color/White" 
		                    	android:layout_width="wrap_content" 
		                    	android:textStyle="bold"></TextView>
		                    <TextView 
		                    	android:layout_marginLeft="10dip" 
		                    	android:id="@+id/caseDesc" 
		                    	android:layout_height="wrap_content" 
		                    	android:textColor="@color/White" 
		                    	android:layout_width="wrap_content"/>
		                </TableRow>		                
		            </TableLayout>
		        </LinearLayout>
		</LinearLayout>		
    </LinearLayout>
</ScrollView>
    